{{#with movie}}
<div class = "row">
    {{!-- <div class = "col-md-4 rand-img"/> --}}
    <img src = "{{image}}" alt = "{{name}}"/>
    </div>
    <div class = "col-md-6 rand-text">
        <h1>{{title}}</h1>
        <h2>{{director}}</h2>

        <h3>Stars</h3>
        <ul>
            {{#each starts}}
            <li>{{ this}}</li>
            {{/each}}
        </ul>
        <p>{{description}}</p>
        <ul>
            {{#each showtime}}
            <li>{{this}}</li>
            {{/each}}
        </ul>
    </div>
</div>
{{/with}}